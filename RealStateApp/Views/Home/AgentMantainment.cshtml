@model List<RealStateApp.Core.Application.ViewModels.User.UserViewModel>
@using RealStateApp.Core.Application.Enums;

@{
    ViewData["Title"] = "Agentes";
}

<div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Mantenimiento Agentes</h1>
       @* <p>
            <a asp-controller="User" asp-action="Register" class="btn btn-primary my-2">Agregar Nuevo Usuario</a>
        </p>*@
    </div>

    <div class="col-lg-6 col-md-8 mx-auto">
        <form method="post" asp-controller="Home" asp-action="AgentMantainment">

            <input type="search" class="form-control ds-input" id="search-input" placeholder="Buscar por nombre de agente"
                   aria-label="Search for..." name="NombreAgente">

            <button type="submit" class="btn btn-primary">Dale</button>
        </form>
    </div>
</div>


<div class="container-fluid">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

        @if (Model.Count == 0 || Model == null)
        {
            <h2>No hay Usuarios</h2>
        }
        else
        {
            @foreach (RealStateApp.Core.Application.ViewModels.User.UserViewModel item in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <img src="@item.ImagePath" class="card-img-top" alt="">
                        <div class="card-body">
                            <h4>@item.FirstName</h4>
                            <p>Apellido: @item.LastName</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">

                                    <a asp-controller="Home" asp-action="AgentDetails" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger mx-2">Detalles</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }

    </div>
</div>


