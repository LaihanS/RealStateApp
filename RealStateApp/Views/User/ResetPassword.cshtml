@{
    ViewData["Title"] = "Restablecer Contraseña";
}

@using RealStateApp.Core.Application.ViewModels.User;
@model ResetPasswordViewModel;


<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-light">
                    <h4> Restablecer contraseña </h4>
                </div>
                <div class="card-body">
                    <div class="card-body">
                        @Html.ValidationSummary(false, "", new{@class = "text-danger" })
                        @if (Model.HasError)
                        {
                            <div class="alert alert-danger alert-dimissible fade show" role="alert">
                                <p>@Model.ErrorDetails</p>
                            </div>
                            <button type="button" class="btn-close" data-bs-dimiss="alert" aria-label="Close"></button>

                        }
                        <form enctype="multipart/form-data" method="post" asp-controller="User" asp-action="ResetPasswordPost">

                            <div class="mb-3">
                                <label for="Correo" class="form-label">Correo</label>
                                <input asp-for="Email" class="form-control" id="Correo">
                            </div>

                            <div class="mb-3">
                                <label for="Correo" class="form-label">Contraseña</label>
                                <input asp-for="Password" class="form-control" id="Correo">
                            </div>

                            <div class="mb-3">
                                <label for="Correo" class="form-label">Confirmar Contraseña</label>
                                <input asp-for="ConfirmPassword" class="form-control" id="Correo">
                            </div>

                            <input type="hidden" asp-for="Token" >

                            <button type="submit" class="btn btn-primary">Dale</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

